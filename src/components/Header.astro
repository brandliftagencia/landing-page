---
import { Image } from 'astro:assets';
import { getRelativeLocaleUrl } from 'astro:i18n';
import logoBrandLift from '../assets/Logo-principal-light.svg';

// Get current locale from Astro's built-in i18n
const currentLocale = Astro.currentLocale;

// Generate proper locale URLs using Astro's helper functions
const spanishUrl = getRelativeLocaleUrl('es');
const englishUrl = getRelativeLocaleUrl('en');
---

<header class="absolute top-0 left-0 right-0 z-50 px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16 py-3 lg:py-4 bg-white">
  <div class="flex items-center justify-between max-w-5xl mx-auto">
    <!-- Logo -->
    <div class="flex items-center">
      <Image 
        src={logoBrandLift} 
        alt="BrandLift Logo" 
        width={90}
        class="h-auto"
      />
    </div>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center space-x-8">
      <a href="#nosotros" class="text-gray-900 hover:text-primary-blue transition-colors font-medium">
        NOSOTROS
      </a>
      <div class="relative group">
        <button data-servicios-button class="text-gray-900 hover:text-primary-blue transition-colors font-medium flex items-center">
          SERVICIOS
          <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
        
        <!-- Servicios Dropdown Menu -->
        <div data-servicios-dropdown class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible transition-all duration-200 group-hover:opacity-100 group-hover:visible">
          <div class="py-2">
            <a href="#seo-tecnico" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
              Estrategia SEO
            </a>
            <a href="#seo-local" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
              Planeación de Contenidos
            </a>
            <a href="#produccion-contenidos" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
              Campañas Micro-influencers
            </a>
          </div>
        </div>
      </div>
      <a href="https://www.papermark.com/view/cmgzjyulv0003jl04zgvvxl9g" class="text-gray-900 hover:text-primary-blue transition-colors font-medium">
        VER BROCHURE
      </a>
    </nav>

    <!-- Desktop Language Selector & Contact Button -->
    <div class="hidden md:flex items-center space-x-4">
      <!-- Language Dropdown -->
      <div class="relative group">
        <button data-language-button class="flex items-center space-x-2 px-4 py-2 rounded-full bg-gradient-to-r from-primary-red to-primary-blue text-white text-sm font-medium hover:opacity-90 transition-opacity">
          <span>{currentLocale === 'es' ? 'ES (Perú)' : 'EN (US)'}</span>
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
        
        <!-- Dropdown Menu -->
        <div data-language-dropdown class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible transition-all duration-200 group-hover:opacity-100 group-hover:visible">
          <div class="py-2">
            <a href={spanishUrl} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
              ES (Perú)
            </a>
            <a href={englishUrl} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
              EN (US)
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Button -->
      <a href="https://wa.me/51968781139" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-2 px-6 py-2 rounded-full border-2 border-primary-red text-primary-red font-medium hover:bg-gradient-to-r from-primary-red to-primary-blue hover:text-white transition-colors">
